// Add the styles required for the tabs plugin
@require '~vuepress-plugin-tabs/dist/themes/default.styl'
// END

// Override the default colors for the Hero page
.home .hero img
  max-width 450px!important
  color black

.description
  color black!important

.home .feature h2
  color black!important

.home .feature p
  color black!important
// END


// Force the top-left logo to overflow to "break the box" in order
// to improve visual appeal
img.logo
    height 4.8rem!important
// END

// Override default colors for the nav/horizontal bar
header
  color black
  &.navbar
    background-color black
    color white
    .site-name
      background-color black
      color white
    .links
      color white
      background-color black
// END

// This is to make the search box input and suggestions visible
.search-box input
  color black!important

ul > li > a > span.page-title
  color black!important
  &:hover
    color $accentColor!important
// END


&.navbar
  border 0px

// Improve navigation with highlight border on sidebar
aside.sidebar
  background-color black

a.active
  color white!important

ul.sidebar-sub-headers
  color white!important
  border-top 2px solid $accentColor

a.sidebar-link.active
  color white!important
  border 0px!important
  border-bottom 2px solid $accentColor

a.router-link-active
  color $accentColor!important
// END

// Set the default page background and text colors
.page
  background-color white
  color black
// END

// Set the background color for code blocks
.theme-default-content code
  background-color $codeBgColor
// END

// Allow main are content to expand to fit available space
.theme-default-content
  max-width: inherit!important
// END

// Force images to not wrap with text and show up below the last line of text
img
  display block
// END

div.last-updated
  position: fixed
  bottom: 10px
  right: 200px
  z-index: 5
  border: 2px solid black !important
  border-radius: 7px !important
  background-color: white
  padding: 4px

span.prefix
  color: black !important


@media print
  div
    break-inside: avoid
  .sidebar-button
    display: none!important
  .sidebar
    display none!important
  .page
    padding-left 0px!important
  iframe
    visibility hidden
    display: none
  @page
    size: auto
    margin: 0px
  header
    display: none!important